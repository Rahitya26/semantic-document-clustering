<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Clustering Result</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h2>Clustering Result</h2>
  <div class="params">
    <p><strong>eps:</strong> <%= eps %></p>
    <p><strong>min_samples:</strong> <%= min_samples %></p>
  </div>

  <div class="clusters-container">
    <% clusters.forEach((group, i) => { %>
      <div class="cluster">
        <h3><%= group.label || 'Cluster ' + (i + 1) %></h3>
        <ul>
          <% group.files.forEach(n => { %>
            <li><%= n %></li>
          <% }) %>
        </ul>
      </div>
    <% }) %>
  </div>

  <div class="upload-more"><a href="/"><button>Upload More Files</button></a></div>
</body>
</html>
